<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xukehang.cms.dao.UserMapper">
	
	<insert id="add" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
		insert into cms_user
 		    (username,password,nickname,birthday,gender,locked,create_time,update_time,url,score,role) 
		    values 
		 (#{username},#{password},#{nickname},#{birthday},#{gender},#{locked},#{createTime},#{updateTime},#{url},#{score},#{role})
	</insert>
	<update id="update">
		update cms_user set
			username     	=	#{username},
			password     	=	#{password},
			nickname     	=	#{nickname},
			birthday     	=	#{birthday},
			gender       	=	#{gender},
			locked       	=	#{locked},
			create_time  	=	#{createTime},
			update_time  	=	#{updateTime},
			url          	=	#{url},
			score        	=	#{score},
			role         	=	#{role}
		where id=#{id}
	</update>
	
	

</mapper>